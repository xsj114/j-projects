{
    "git": {
        "commit": true,
        "tag": true,
        "push": true,
        "requireCommits": true,
        "commitMessage": "Release v${version}",
        "tagName": "v${version}",
        "tagAnnotation": "release: v${version}",
        "requireCleanWorkingDir": true,
        "requireUpstream": true
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md",
            "strictLatest": false,
            "addUnreleased": true
        }
    },
    "hooks": {}
}
